<h1><%= image_tag 'products_header.gif' %></h1>


<ul id="genre">
  <li><%= link_to 'All', products_path %></li>
  <%- @categories.each do |category| %>
    <li><%= link_to category.name, category_path(u(category.name)) %></li>
  <%- end %>
</ul>

<div id="content">
  <ul id="items">
    <%- @products.each do |product| -%>
    <li>
      <%= link_to image_tag(url_for_file_column(product, :image, 'small')), product, :title => product.title %>
    </li>
    <%- end -%>
  </ul>
</div>
